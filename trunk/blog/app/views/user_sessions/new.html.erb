<%= page_title("Login") %>

<div style="color:red">
  <%= flash[:notice] %>
</div>

<%= form_for @user_session do |f| %>
  <%= render "shared/error_messages", :target => @user_session %>

  <p>
    <%= f.label :username %> <br/>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :password %> <br>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.submit "Login" %>
  </p>
<% end %>
